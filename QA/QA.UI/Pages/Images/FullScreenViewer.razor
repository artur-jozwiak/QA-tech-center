@inherits ComponentBase
<style>
    .lightbox {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 1;
    }

    .lightbox-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .close-button {
        color: lightgray;
        font-size: 20px;
        font-weight: bold;
        position: absolute;
        top: 10px;
        right: 10px;
        cursor: pointer;
    }

</style>

<div class="lightbox" style="display:block">
    <span class="close-button oi oi-x" @onclick="CloseLightbox"></span>
    <div class="lightbox-content">
        <img src="@ImageUrl" alt="Lightbox Image" />
    </div>
</div>

@code {
    [Parameter]
    public string ImageUrl { get; set; }

    [CascadingParameter]
    public ImageUploader ImageUploader { get; set; }

    private void CloseLightbox()
    {
        ImageUploader.CloseFullScreenViewer();
    }
}
